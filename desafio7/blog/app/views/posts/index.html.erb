<h1>Posts#dashboard</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<h3><%= link_to 'New', posts_new_path%></h3>

<table class="table">
  <thead>
    <tr>
      <th>title</th>
      <th>date</th>
      <th>image_url</th>
      <th>content</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.date %></td>
      <td><%= post.image_url %></td>
      <td><%= post.content %></td> 
    </tr>
    <% end %>
  </tbody>
</table> 